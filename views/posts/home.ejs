                  <div class="col-6 d-flex">
                    <small class="mb-0 mr-2 text-muted text-muted">Posted By</small>
                    <small class="Last-responded mr-2 mb-0 text-muted text-muted"><%= posts[i].author%></small>
                    <small class="Last-responded mr-2 mb-0 text-muted text-muted">3 hours ago</small>
                  </div>
                </div>
                <div class="d-flex">
                  <h3 class="mb-0 ellipsis"><%= posts[i].title%></h3>
                </div>
                <p class="text-gray my-2">
                  <%= posts[i].description%>
                </p>
                <div class='stats'>
                  <p class="text-gray">
                    <small>
                      <span><i class='fas fa-heart text-pinterest'></i> <%= posts[i].stats.likes %> Likes</span>
                      <span class='px-1'>&nbsp;</span>
                      <span><i class='fas fa-comments text-twitter'></i> <%= posts[i].stats.comments %> Comments</span>
                    </small>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% } %>

    <div class='actions mt-3'>
      <button type="button" class="btn btn-secondary btn-block">
        Load More
      </button>
    </div>
  </div>
