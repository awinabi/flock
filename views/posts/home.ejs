      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4">All Posts</h5>
          <div class="fluid-container">
            <% for(var i=0; i<posts.length; i++) { %>
            <div class="row mt-3 post-item pb-3 mb-3">
              <div class="col-md-12">
                <div class="d-flex">

                  <h3 class="mb-0 ellipsis"><%= posts[i].title%></h3>
                </div>
                <p class="text-gray ellipsis mb-2">
                    <%= posts[i].description%>
                </p>
                <div class="row text-gray d-md-flex d-none">
                  <div class="col-6 d-flex">
                    <small class="mb-0 mr-2 text-muted text-muted">By</small>
                    <small class="Last-responded mr-2 mb-0 text-muted text-muted"><%= posts[i].author%></small>
                    <small class="Last-responded mr-2 mb-0 text-muted text-muted">3 hours ago</small>
                  </div>
                  <div class="col-6 d-flex">
                    
                  </div>
                </div>
              </div>
            </div>
            
            <% } %>
          </div>
          
        </div>
      </div>
