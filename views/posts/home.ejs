<div class="row">
  <div class="col-lg-12">
    <div class="card featured-posts">
      <div class="card-body">
        <div>
          <p>
            <% for(var i=0; i<posts[0].tags.length; i++) { %>
              <span class="badge badge-primary badge-pill"><%= posts[0].tags[i] %></span>
            <% } %>
          </p>
          <h3><%= posts[0].title %></h3>
          <p class="text-gray">
            <small>
              <span><i class='fas fa-heart text-pinterest'></i> <%= posts[0].stats.likes %> Likes</span>
              <span class='px-1'>&nbsp;</span>
              <span><i class='fas fa-comments text-twitter'></i> <%= posts[0].stats.comments %> Comments</span>
            </small>
          </p>
        </div>
        <div class="post-description d-flex">
          <div class="mr-auto">
            <p>
              <%= posts[0].description %>
            </p>
          </div>
        </div>
        <div>
          <p class="text-gray">
            <small>
              <span class=""><%= posts[0].postedAt %></span>
              <span class='px-1'>&nbsp;</span>
              <span class="">By <%= posts[0].author %></span>
              <span class='px-1'>&nbsp;</span>
            </small>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
