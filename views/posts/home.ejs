<div class="row">
  <div class="col-lg-12">
    <% for(var i=0; i<posts.length; i++) { %>
      <div class="card mt-3">
        <div class="card-body">
            <div class="row post-item">
              <div class="col-md-12">
                <div class="row text-gray d-md-flex d-none">
                  <div class="col-6 d-flex">
                      <p>
                        <% for(var j=0; j<posts[i].tags.length; j++) { %>
                          <span class="badge badge-primary badge-pill"><%= posts[i].tags[j] %></span>
                        <% } %>
                      </p>
                  </div>
                </div>
