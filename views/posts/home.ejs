                      <p>
                        <%= posts[2].description.substring(0, 150) %>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
        </div>
      </div>

    </div>
    <div class="col-lg-4 grid-margin stretch-card">
      <div class="card bg-bluebell text-light">
        <div class="card-body">
          <h2 class="card-title text-white mb-5">Trending</h2>
          <div class="wrapper d-flex justify-content-between">
            <div class="side-left">
              <p class="mb-2">The best performance</p>
              <p class="display-3 mb-4 font-weight-light">+45.2%</p>
            </div>
            <div class="side-right">
              <small class="text-muted">2017</small>
            </div>
          </div>
          <div class="wrapper d-flex justify-content-between">
            <div class="side-left">
              <p class="mb-2">Worst performance</p>
              <p class="display-3 mb-5 font-weight-light">-35.3%</p>
            </div>
            <div class="side-right">
              <small class="text-muted">2015</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
