<div class="row">
    <div class="col-lg-8 grid-margin">
      <div class="row">
        <div class="col-lg-12">
          <div class="card featured-posts">
            <div class="card-body">
              <div>
                <h3><%= posts[0].title %></h3>
                <p class="text-gray">
                  <span class="weather-date"><%= posts[0].postedAt %></span>
                  <span class="weather-location">By <%= posts[0].author %></span>
                </p>
              </div>
              <div class="post-description d-flex">
                <div class="mr-auto">
                  <p>
                    <%= posts[0].description %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-6 mt-3">
            <div class="card featured-posts">
                <div class="card-body">
                  <div>
                    <h3><%= posts[1].title %></h3>
                    <p class="text-gray">
                      <span class="weather-date"><%= posts[1].postedAt %></span>
                      <span class="weather-location">By <%= posts[1].author %></span>
                    </p>
                  </div>
                  <div class="post-description d-flex">
                    <div class="mr-auto">
                      <p>
                        <%= posts[1].description.substring(0, 150) %>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
        </div>
